
<%= form_for(@user_interest) do |f| %>
  <div class="field">
    <%=f.label "Surfing" %> 
    <%=f.check_box :surfing, :class => "surf_checkbox" %> <br /> 
  </div>
  <div class="field">
    <%=f.label "Concerts" %>
    <%=f.check_box :concerts, :class => "concert_checkbox" %> <br />
  </div>
  <div class="field">
    <%=f.label "Free Events" %> 
    <%=f.check_box :free_events %> <br />
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-success" %>  
  </div>  
<% end %> 

<div id="show_surf_breaks", style="display:none">
  <%= render partial: 'user_surf_breaks/user_surf_breaks' %>  
</div>

<script>
$(".surf_checkbox").click(function(){
  $("#show_surf_breaks").toggle();
});
