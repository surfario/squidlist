<%= form_for(@surf_break) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter name"%>
  </div>
  <div class="form-group">
    <%= f.label :spot_id %>
    <%= f.text_field :spot_id, class: 'form-control', placeholder: "Enter spot_id"%>
  </div>
  <% if @surf_break.surfpic? %>
    <div class="form-group">
      <p>Current Surfpic</p>
      <%= image_tag( @surf_break.surfpic.url ) %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :surfpic %>
    <%= f.file_field :surfpic %>
    <%= f.hidden_field :surfpic_cache %>
  </div>
  <div class="form-group">
    <%= f.submit "Update", class: 'btn btn-success' %>
  </div>
<% end %>          
    
